<div class="row">
  <div class="col-md-6">
    <div class="newPost">
      <%= form_for @post do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br><br>
        <%= f.label :body %><br>
        <%= f.text_area :body %><br>
        <%= f.label :pictures %><br>
        <%= f.file_field :pictures, multiple: true %><br>
    </div>
  </div>
  <div class="col-md-6">
    <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |b| %>
      <%= b.label(class: "check_box") do %>
        <%= b.check_box(class: "check_box") %>
        <%= b.object.name %>
      <% end %><br>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6"></div>
  <div class="col-md-4"></div>
  <div class="col-md-2">
    <%= f.submit %>
  <% end %>
  </div>
</div>
